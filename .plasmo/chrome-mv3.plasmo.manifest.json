{
  "icons": {
    "16": "./gen-assets/icon16.plasmo.png",
    "32": "./gen-assets/icon32.plasmo.png",
    "48": "./gen-assets/icon48.plasmo.png",
    "64": "./gen-assets/icon64.plasmo.png",
    "128": "./gen-assets/icon128.plasmo.png"
  },
  "manifest_version": 3,
  "action": {
    "default_icon": {
      "16": "./gen-assets/icon16.plasmo.png",
      "32": "./gen-assets/icon32.plasmo.png",
      "48": "./gen-assets/icon48.plasmo.png",
      "64": "./gen-assets/icon64.plasmo.png",
      "128": "./gen-assets/icon128.plasmo.png"
    }
  },
  "version": "1.0.0",
  "author": "Visesh Prasad",
  "name": "Wordspotting",
  "description": "Get notified when a word is found in a web page.",
  "background": {
    "service_worker": "./static/background/index.ts"
  },
  "permissions": [
    "notifications",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/scan-worker.js",
        "assets/js/core/scanner.js",
        "assets/css/index.css",
        "assets/icon.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
