{
  "name": "wordspotting",
  "version": "1.0.0",
  "description": "Get notified when a word is found in a web page.",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:e2e": "wxt build -c tests/e2e/wxt.e2e.config.ts -m e2e",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:webext": "pnpm build:firefox && web-ext lint --source-dir .output/firefox-mv2 --self-hosted",
    "format": "biome format .",
    "quality": "pnpm compile && pnpm lint",
    "smoke": "node scripts/smoke.mjs",
    "smoke:e2e": "pnpm test:e2e",
    "package": "pnpm zip",
    "postinstall": "wxt prepare",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "pnpm build:e2e && playwright test"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@playwright/test": "^1.51.1",
    "@types/chrome": "^0.1.0",
    "@types/node": "^24.3.3",
    "@vitest/coverage-v8": "^2.1.4",
    "jsdom": "^24.1.3",
    "typescript": "^5.9.3",
    "vitest": "^2.1.4",
    "web-ext": "^8.4.0",
    "wxt": "^0.20.13"
  },
  "keywords": [
    "chrome-extension",
    "keyword-spotter"
  ],
  "author": "Visesh Prasad",
  "license": "MIT"
}
