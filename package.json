{
  "name": "wordspotting",
  "version": "1.0.0",
  "description": "Get notified when a word is found in a web page.",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:webext": "pnpm build:firefox && web-ext lint --source-dir .output/firefox-mv2 --self-hosted",
    "test": "jest --coverage",
    "biome": "biome lint .",
    "quality": "pnpm compile && pnpm lint",
    "package": "pnpm zip",
    "format": "biome format .",
    "smoke": "tsx scripts/smoke_test.ts",
    "smoke:e2e": "tsx scripts/smoke_playwright.ts",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.3",
    "@biomejs/biome": "^2.3.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright-chromium": "^1.42.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3",
    "web-ext": "^8.4.0",
    "wxt": "^0.20.13"
  },
  "keywords": [
    "chrome-extension",
    "keyword-spotter"
  ],
  "author": "Visesh Prasad",
  "license": "MIT"
}
