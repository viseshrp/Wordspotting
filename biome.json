{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "files": {
    "includes": [
      "**/*",
      "!node_modules",
      "!coverage",
      "!.output",
      "!.wxt",
      "!dist",
      "!package-lock.json"
    ]
  },
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
