{
  "env": {
    "browser": true,
    "es2021": true,
    "webextensions": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "error"
  },
  "globals": {
    "chrome": "readonly",
    "importScripts": "readonly",
    "requestIdleCallback": "readonly",

    "// Utils Globals": "readonly",
    "saveToStorage": "readonly",
    "getFromStorage": "readonly",
    "showAlert": "readonly",
    "isValidObj": "readonly",
    "trimAndClean": "readonly",
    "logit": "readonly",
    "getRandomInt": "readonly",

    "// Settings Globals": "readonly",
    "ensureSettingsInitialized": "readonly",

    "// Matching Globals": "readonly",
    "buildSiteRegex": "readonly",
    "isUrlAllowed": "readonly",
    "compileSitePatterns": "readonly",
    "isUrlAllowedCompiled": "readonly",
    "buildPatternsForTab": "readonly"
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "globals": {
        "test": "readonly",
        "expect": "readonly",
        "describe": "readonly",
        "beforeAll": "readonly",
        "beforeEach": "readonly",
        "afterEach": "readonly",
        "jest": "readonly",
        "getWordList": "writable",
        "partitionSitePatterns": "writable",
        "mergeUnique": "writable"
      }
    },
    {
      "files": ["js/utils.js"],
      "rules": {
        "no-unused-vars": "off"
      }
    }
  ]
}
