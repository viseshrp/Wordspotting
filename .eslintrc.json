{
    "env": {
        "browser": true,
        "es2021": true,
        "webextensions": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "quotes": ["error", "double"],
        "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
        "no-console": "off",
        "no-undef": "error"
    },
    "overrides": [
        {
            "files": ["tests/**/*.js"],
            "globals": {
                "test": "readonly",
                "expect": "readonly",
                "describe": "readonly",
                "beforeAll": "readonly",
                "beforeEach": "readonly",
                "afterEach": "readonly",
                "jest": "readonly",
                "getWordList": "writable",
                "partitionSitePatterns": "writable",
                "mergeUnique": "writable"
            }
        },
        {
            "files": ["js/utils.js"],
            "rules": {
                "no-unused-vars": "off"
            }
        },
        {
            "files": ["src/js/scan-worker.js"],
            "env": {
                "worker": true
            }
        }
    ]
}
