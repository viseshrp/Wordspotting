{
    "name": "Word Notifier",
    "description" : "Get notified when a word is found.",
    "version": "0.1",
    "manifest_version": 2,
    "browser_action": {
        "default_title": "Word Notifier",
        "default_popup": "index.html"
    },
    "permissions": [
        "notifications",
        "tabs",
        "storage",
        "contextMenus",
        "*://*/*"
    ],
    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    }
  }
