{
  "name": "Wordspotting",
  "description": "Get notified when a word is found in a web page.",
  "version": "0.1.0",
  "author": "Visesh Prasad",
  "homepage_url": "http://www.viseshprasad.com/Wordspotting",
  "incognito": "not_allowed",
  "manifest_version": 2,
  "icons": {
    "16": "img/ws16.png",
    "24": "img/ws24.png",
    "32": "img/ws32.png",
    "48": "img/ws48.png",
    "128": "img/ws128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "img/ws16.png",
      "24": "img/ws24.png",
      "32": "img/ws32.png",
      "48": "img/ws48.png",
      "128": "img/ws128.png"
    },
    "default_title": "Wordspotting",
    "default_popup": "popup.html"
  },
  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "js/jquery-3.2.1.min.js",
      "js/utils.js",
      "js/eventPage.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css/index.css"
      ],
      "js": [
        "js/jquery-3.2.1.min.js",
        "js/utils.js",
        "js/mainContentScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "img/*.png",
    "css/*.css",
    "options.html"
  ],
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html"
  },
  "minimum_chrome_version": "22.0",
  "update_url": "http://www.viseshprasad.com/Wordspotting"
}
