{
  "name": "Wordspotting",
  "description": "Get notified when a word is found.",
  "version": "0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Wordspotting",
    "default_popup": "index.html"
  },
  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "*://*/*"
  ],
  "background": {
    "scripts": [
      "js/jquery-3.2.1.min.js",
      "js/utils.js",
      "js/eventPage.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css/index.css"
      ],
      "js": [
        "js/jquery-3.2.1.min.js",
        "js/utils.js",
        "js/mainContentScript.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "img/*.png",
    "css/*.css",
    "options.html"
  ],
  "options_page": "options.html"
}
